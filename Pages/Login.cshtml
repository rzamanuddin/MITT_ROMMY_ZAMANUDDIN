@page
@model MITT_ROMMY_ZAMANUDDIN.Pages.LoginModel
@{
    ViewData["Titale"] = "Login Page";
}

<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserLogin.username">Username</label>
                <input type="text" class="form-control" placeholder="Username" asp-for="UserLogin.username" />
                <span asp-validation-for="UserLogin.username" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserLogin.password">Password</label>
                <input type="text" class="form-control" placeholder="Username" asp-for="UserLogin.password" />
                <span asp-validation-for="UserLogin.password" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">{ api/Login }</button>
                </div>
            </div>
            <div class="form-group form-row border-top">
                <div class="col text-center">
                    <a href="/Register">Register</a>
                </div>
            </div>
            <div class="form-group form-row">
                <span class="text-danger">@Model.ErrorMessage</span>
            </div>
        </form>
    </div>
</div>