@page
@model MITT_ROMMY_ZAMANUDDIN.Pages.RegisterModel
@{

    ViewData["Titale"] = "Register Page";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<div class="card">
    <div class="card-body">
        <form method="post">
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserProfile.username">Username</label>
                <input type="text" class="form-control" placeholder="Username" asp-for="UserProfile.username" />
                <span asp-validation-for="UserProfile.username" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserProfile.name">Name</label>
                <input type="text" class="form-control" placeholder="Username" asp-for="UserProfile.name" />
                <span asp-validation-for="UserProfile.name" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserProfile.address">Address</label>
                <textarea class="form-control" placeholder="Username" asp-for="UserProfile.address"></textarea>
                <span asp-validation-for="UserProfile.address" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserProfile.birthdate">Birth of Date</label>
                <input type="date" class="form-control" placeholder="Username" asp-for="UserProfile.birthdate" />
                <span asp-validation-for="UserProfile.birthdate" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <label class="col-form-label" asp-for="UserProfile.email">Email</label>
                <input type="email" class="form-control" placeholder="Email" asp-for="UserProfile.email" />
                <span asp-validation-for="UserProfile.email" class="text-danger"></span>
            </div>
            <div class="form-group form-row">
                <div class="col text-right">
                    <button type="submit" class="btn btn-primary">{ api/Register }</button>
                </div>
            </div>
            <div class="form-group form-row">
                <span class="text-danger">@Model.ErrorMessage</span>
            </div>
            <div class="form-group form-row">
                <div class="col-12 text-right">
                    <span class="text-success">@Model.SuccessMessage</span>
                </div>
                <div class="col-12 text-right">
                    @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
                    {
                        <a href="/Login">Please to Login</a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();

        if (dd < 10) {
            dd = '0' + dd;
        }

        if (mm < 10) {
            mm = '0' + mm;
        }

        today = yyyy + '-' + mm + '-' + dd;
        //document.getElementById("UserProfile_birthdate").setAttribute("text", today);
        $("#UserProfile_birthdate").val(today);
    });
</script>